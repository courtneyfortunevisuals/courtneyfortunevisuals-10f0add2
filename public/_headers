# Security Headers Configuration
# Compatible with Netlify, Vercel, and other modern hosting platforms
# These headers enhance security and prevent common web vulnerabilities

# Cache headers for images
/lovable-uploads/*
  Cache-Control: public, max-age=31536000, immutable

# Cache headers for JS/CSS bundles
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# Cache headers for fonts
/*.woff
  Cache-Control: public, max-age=31536000, immutable
/*.woff2
  Cache-Control: public, max-age=31536000, immutable
/*.ttf
  Cache-Control: public, max-age=31536000, immutable

# Cache headers for icons and favicons
/*.ico
  Cache-Control: public, max-age=31536000, immutable
/*.svg
  Cache-Control: public, max-age=31536000, immutable

# Cache headers for PDF files
/*.pdf
  Cache-Control: public, max-age=31536000, immutable

/*
  # Content Security Policy (CSP)
  # Strict but compatible rules to prevent XSS and injection attacks
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdn.gpteng.co https://www.snapchat.com https://*.vimeo.com; style-src 'self' 'unsafe-inline'; img-src 'self' data: https: blob:; font-src 'self' data:; connect-src 'self' https://*.supabase.co wss://*.supabase.co https://player.vimeo.com https://*.vimeo.com; frame-src 'self' https://player.vimeo.com https://www.snapchat.com; media-src 'self' https://*.vimeo.com blob:; object-src 'none'; base-uri 'self'; form-action 'self'; frame-ancestors 'self'; upgrade-insecure-requests
  
  # HTTP Strict Transport Security (HSTS)
  # Forces HTTPS connections for increased security
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload
  
  # Cross-Origin Opener Policy (COOP)
  # Prevents cross-origin attacks and spectre vulnerabilities
  Cross-Origin-Opener-Policy: same-origin
  
  # Cross-Origin Embedder Policy (COEP)
  # Controls resource loading from other origins
  Cross-Origin-Embedder-Policy: require-corp
  
  # Cross-Origin Resource Policy (CORP)
  # Protects against certain cross-origin attacks
  Cross-Origin-Resource-Policy: same-site
  
  # X-Frame-Options
  # Prevents clickjacking attacks
  X-Frame-Options: SAMEORIGIN
  
  # X-Content-Type-Options
  # Prevents MIME type sniffing
  X-Content-Type-Options: nosniff
  
  # X-XSS-Protection
  # Enables browser XSS protection (legacy browsers)
  X-XSS-Protection: 1; mode=block
  
  # Referrer Policy
  # Controls referrer information
  Referrer-Policy: strict-origin-when-cross-origin
  
  # Permissions Policy
  # Controls browser features and APIs
  Permissions-Policy: geolocation=(), microphone=(), camera=(), payment=(), usb=(), magnetometer=(), gyroscope=(), accelerometer=()
  
  # Cache Control for HTML
  Cache-Control: public, max-age=0, must-revalidate

# Source maps should not be accessible in production
/*.map
  X-Robots-Tag: noindex
  Cache-Control: no-store

# API routes with stricter CSP
/api/*
  Content-Security-Policy: default-src 'none'; frame-ancestors 'none'
  X-Content-Type-Options: nosniff
  X-Frame-Options: DENY